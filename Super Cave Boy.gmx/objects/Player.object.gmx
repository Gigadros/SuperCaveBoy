            <kind>1</kind>
            <string>/// Collide with an enemy
var above_enemy = y &lt; other.y + vspd;
var falling = vspd &gt; 0;

if (above_enemy &amp;&amp; (falling || state == ledge_grab_state)){
    // Move player directly above the enemy (avoids damage from other enemies in the same spot)
    if(!place_meeting(x, yprevious, Solid)){
        y = yprevious;
    }
    while(!place_meeting(x, y+1, other)){
        y++;
    }
    // Kill the enemy
    with(other){
        instance_destroy();
    }
    // Bounce off the enemy
    vspd = - (jspd / 1.5);
    
    // Play the sound
    audio_play_sound(snd_step, 6, false);
}else{
    // Take damage
    if(state != hurt_state){
        audio_emitter_pitch(audio_em, 1.6);
        audio_emitter_gain(audio_em, 1.4);
        audio_play_sound_on(audio_em, snd_ouch, false, 8);
    
        image_blend = make_colour_rgb(220, 150, 150);
        vspd = -12;
        hspd = (sign(x - other.x) * 10);
        
        state = hurt_state;
        
        move(Solid);
        
        if(instance_exists(PlayerStats)){
            PlayerStats.hp -= 1;
        }
    }
}
</string>
